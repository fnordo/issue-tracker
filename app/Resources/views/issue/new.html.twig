{% extends 'base.html.twig' %}

{% block action_nav %}
    <div class='page-header'>
        <div class='btn-toolbar pull-right'>
            <div class='btn-group'>
                <a class="btn btn-default btn-primary pull-right" href="{{ path('issue_index') }}" role="navigation">{{ 'back_to_list'|trans }}</a>
            </div>
        </div>
        <h2>{{ 'issue.header.new'|trans }}</h2>
    </div>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-xs-12">
            {{ form_start(form) }}
                {{ form_widget(form) }}
                <div class="btn-group pull-right" role="group">
                    <a href="{{ path('issue_index') }}" class="btn btn-danger">{{ 'cancel'|trans }}</a>
                    <input class="btn btn-success" type="submit" value="{{ 'issue.label.submit'|trans }}" />
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
